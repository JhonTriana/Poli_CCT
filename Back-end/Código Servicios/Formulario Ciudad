appServer.get ('/allCiudad', (req, res)=>{                   //Consultar todas las actividades
    res.json (Ciudad);
});
appServer.post ('/addCiudad' , (req, res)=>{                 //Ingresar Ciudad
    const usuario = req.body;
    Ciudad.push(usuario);
});
appServer.get('/readCiudadById/:id', (req, res)=>{           //Consultar Ciudad por Id
    var index = Ciudad.findIndex(function(idCiudad){
        return <idCiudad class="idv"></idCiudad> === req.params.id;
    });
    res.json (Ciudad[index]);
});
appServer.post ('/removeCiudadById/:id' , (req, res)=>{       //Eliminar Ciudad por Id
    var index = Ciudad.findIndex(function(idCiudad){
        return idCiudad.idCiudad === req.params.id;
    });
    Ciudad.splice(index,1);
});
appServer.post ('/updateCiudadById/:id' , (req, res)=>{       //Editar Ciudad por Id
    const usuario = req.body;
    var index = ciudad.findIndex(function(idCiudad){
        return idCiudad.idCiudad === req.params.id;
    });
    ciudad.splice(index,1);
    ciudad.push(usuario);
});
